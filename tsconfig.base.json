        "libs/common/ui/dash-board-layout/src/index.ts"
      ],
      "@common/utilities": ["libs/common/utilities/src/index.ts"],
      "@features/api/sys-admin/add-restaurant": [
        "libs/api/sys-admin/add-restaurants/src/index.ts"
      ],
      "@features/api/sys-admin/auth": ["libs/api/sys-admin/auth/src/index.ts"],
      "@features/api/sys-admin/edit-restaurant": [
        "libs/api/sys-admin/edit-restaurants/src/index.ts"
      ],
      "@features/api/sys-admin/list-restaurants": [
        "libs/api/sys-admin/list-restaurants/src/index.ts"
      ],
      "@features/pmo/error": ["libs/pmo/error/src/index.ts"],
      "@features/pmo/home": ["libs/pmo/home/src/index.ts"],
      "@features/pmo/my-order-history": [
        "libs/pmo/my-order-history/src/index.ts"
      ],
      "@features/pmo/not-found": ["libs/pmo/not-found/src/index.ts"],
      "@features/pmo/order-detail": ["libs/pmo/order-detail/src/index.ts"],
      "@features/pmo/restaurant-detail": [
        "libs/pmo/restaurant-detail/src/index.ts"
      ],
      "@features/pmo/restaurants-list": [
        "libs/pmo/restaurants-list/src/index.ts"
      ],
      "@features/restaurants-admin/auth": [
        "libs/restaurants-admin/auth/src/index.ts"
      ],
      "@features/restaurants-admin/restaurant-orders": [
        "libs/restaurants-admin/restaurant-orders/src/index.ts"
      ],
      "@features/sys-admin/add-restaurant": [
        "libs/sys-admin/add-restaurant/src/index.ts"
      ],
      "@features/sys-admin/auth": ["libs/sys-admin/auth/src/index.ts"],
      "@features/sys-admin/edit-restaurant": [
        "libs/sys-admin/edit-restaurant/src/index.ts"
